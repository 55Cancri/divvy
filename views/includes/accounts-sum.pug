-
  function addZeroes(num) {
    let value = Number(num)
    let res = num.split(".")
    if(num.indexOf('.') === -1) {
      value = value.toFixed(2)
      num = value.toString()
    } else if (res[1].length < 3) {
      value = value.toFixed(2)
      num = value.toString()
    }
    return num
  }

  function numberWithCommas(x) {
    var parts = x.toString().split(".");
    parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ",");
    return parts.join(".");
  }
  let accountsSumTotal = user.accounts.reduce(function(total, item) { return total + item.amount }, 0)

  // conversion to string enables "num.split" in function
  let addZeros = addZeroes(accountsSumTotal.toString())
  // conversion to number enables toFixed() method
  addZeros = +(addZeros)
  let addCommas = numberWithCommas(addZeros.toFixed(2))

div(class="total-cash-container")
  div(class="total")
    span sum total: #{accountsSumTotal}
    p Total cash:
      span(class="total-number") $#{addCommas}
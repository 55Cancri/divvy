div(class="modal")
  div(class="modal-content")
    div(class="top")
      header
        p total points:
          span(class="total-points")  100
        div(class="fa fa-close modal-close")
      form(method="post" class="newAccount")
        div(class="percentage-div")
          button(class="minus") -

          input(class="enter-account-percentage" name="account_percent" maxlength="3" size="2" min="1" max="99" value="14" type="number" oninput="this.setCustomValidity('Percent must not be empty.')" required)

          span(class="percent-symbol") %

          button(class="add") +

        div(class="submit-div")
          input(class="enter-account-name" name="account_name" type="text" placeholder="Account name" required)
          input(class="submit-new-account" type="submit" value="done")
    div(class="bottom")
      ul(class="modal-account-list")
        li
          p(class="bottom-account-name") business
          div(class="modal-list-percentage")
            button(class="list-minus") -
            p(class="modal-list-number") 25
              span %
            button(class="list-add") +

        li
          p(class="bottom-account-name") car
          div(class="modal-list-percentage")
            button(class="list-minus") -
            p(class="modal-list-number") 25
              span %
            button(class="list-add") +

        li
          p(class="bottom-account-name") food
          div(class="modal-list-percentage")
            button(class="list-minus") -
            p(class="modal-list-number") 25
              span %
            button(class="list-add") +

        li
          p(class="bottom-account-name") investment
          div(class="modal-list-percentage")
            button(class="list-minus") -
            p(class="modal-list-number") 25
              span %
            button(class="list-add") +




